</style>

<body onload="NewsAPI()">
    @*@{
            ViewBag.Title = "Index";
        }*@
    <h4>Technology News Articles</h4>
    <hr />
    
    <div id="newsStories">
        @foreach (var item in Model.allDbArticles)
        {
            <div id="singleStory" style="border:groove">
                
                <dl class="dl-horizontal" id="eachStory">
                    <dt>
                        Image:
                    </dt>

                    <dd>
                        <a href="@item.ImageUrl"><img src="@item.ImageUrl" height="100" width="100"/></a>
                    </dd>
                    <dt>
                        Author: 
                    </dt>

                    <dd>
                        @item.Author
                    </dd>

                    <dt>
                        Title: 
                    </dt>

                    <dd>
                        @item.Title
                    </dd>

                    <dt>
                        Article:
                    </dt>

                    <dd>
                        @item.Article
                    </dd>

                    <dt>
                        Article URL:
                    </dt>

                    <dd>
                        <a href="@item.OriginalUrl">@item.OriginalUrl</a>
                    </dd>

                    <dt>
                        Publish Date:
                    </dt>

                    <dd>
                        @item.PublishDate
                    </dd>
                    <dd>
                        @Html.ActionLink("Add/View Comments", "Details", new { id = item.NewsArticleId })
                    </dd>


                </dl>
            </div>
        }
    </div>





    @section Scripts {
        <script type="text/javascript" src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
        <script type="text/javascript" src="~/Scripts/Articles.js"></script>
    }
</body>

